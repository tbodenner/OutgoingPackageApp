<Window
  x:Class="PrescottOITShipping.View.PrintWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:PrescottOITShipping.View"
  mc:Ignorable="d"
  Title="Shipping Print Preview"
  Height="450"
  Width="800"
  WindowStartupLocation="CenterOwner"
  ResizeMode="NoResize">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="38"/>
    </Grid.RowDefinitions>
    <GroupBox
      Grid.Row="0"
      Header="Preview">
      <RichTextBox
        x:Name="RichTextBoxPrintPreview"
        FontFamily="Arial"
        FontSize="24"
        IsEnabled="False"
        BorderThickness="0"/>
    </GroupBox>
    <Grid
      Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="2*"/>
      </Grid.ColumnDefinitions>
      <Button
        x:Name="ButtonPrint"
        Grid.Column="1"
        Margin="2"
        Content="Print"/>
      <Button
        x:Name="ButtonCancel"
        Grid.Column="2"
        Margin="2"
        Content="Cancel"/>
    </Grid>
  </Grid>
</Window>
