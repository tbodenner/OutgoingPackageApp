<Window x:Class="PrescottOITShipping.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:PrescottOITShipping"
  mc:Ignorable="d"
  DataContext="{Binding RelativeSource={RelativeSource Self}}"
  Title="Prescott OIT Shipping"
  Height="227"
  Width="550"
  ResizeMode="NoResize"
  WindowStartupLocation="CenterScreen">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <StackPanel
      Grid.Column="0">
      <ComboBox
        x:Name="ComboBoxAddressName"
        VerticalContentAlignment="Center"
        Height="26"
        Margin="6,6,6,0"
        Width="Auto"
        SelectionChanged="ComboBoxAddressName_SelectionChanged"/>
      <TextBox
        x:Name="TextBoxFullName"
        VerticalContentAlignment="Center"
        Height="26"
        Margin="6,6,6,0"
        Width="Auto"
        TextWrapping="Wrap"
        Text="{Binding SenderName}"
        VerticalAlignment="Top"/>
      <TextBox
        x:Name="TextBoxUserEmail"
        VerticalContentAlignment="Center"
        Height="26"
        Margin="6,6,6,0"
        Width="Auto"
        TextWrapping="Wrap"
        Text="{Binding SenderEmail}"
        VerticalAlignment="Top"/>
      <CheckBox
        x:Name="CheckBoxReturnLabel"
        Content="Request Return Label"
        VerticalContentAlignment="Center"
        IsChecked="{Binding ReturnLabel}"
        Height="26"
        VerticalAlignment="Top"
        Margin="6,6,6,0"/>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <CheckBox
          x:Name="CheckBoxQuickPrint"
          IsChecked="{Binding QuickPrint}"
          Grid.Column="0"
          Grid.Row="0"
          Content="Quick Print"
          Height="26"
          VerticalContentAlignment="Center"
          Margin="6,2,2,0"/>
        <Label
          x:Name="LabelPrinterName"
          Content="{Binding PrinterName}"
          Grid.Column="0"
          Grid.Row="1"
          Height="26"
          VerticalContentAlignment="Center"
          Margin="2,2,2,0"/>
        <Button
          x:Name="ButtonPrint"
          Grid.Column="1"
          Grid.Row="0"
          Content="Print"
          VerticalContentAlignment="Center"
          Margin="2,2,6,2" Click="ButtonPrint_Click"/>
        <Button
          x:Name="ButtonExit"
          Grid.Column="1"
          Grid.Row="1"
          Content="Exit"
          Height="22"
          VerticalContentAlignment="Center"
          Margin="2,2,6,2"
          Click="ButtonExit_Click"/>
      </Grid>
    </StackPanel>
    <GroupBox
      Grid.Column="1"
      Header="Ship To Address"
      Margin="6,2,6,6">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="26"/>
        </Grid.RowDefinitions>
        <Grid
          Grid.Row="0">
          <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
          <TextBox
            Grid.Row="0"
            x:Name="TextBoxShipToPerson"
            VerticalContentAlignment="Center"
            Height="26"
            Margin="6,0,6,0"
            Text="{Binding Recipient}"/>
          <TextBox
            Grid.Row="1"
            x:Name="TextBoxFullAddress"
            Text="{Binding Address}"
            Width="Auto"
            Height="Auto"
            TextWrapping="Wrap"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Margin="6,0,6,0"/>
        </Grid>
        <CheckBox
          Grid.Row="1"
          x:Name="CheckBoxCustomAddress"
          Content="Custom Address"
          VerticalContentAlignment="Center"
          Height="26"
          VerticalAlignment="Bottom"
          Margin="6,0,6,0"
          Checked="CheckBoxCustomAddress_CheckState"
          Unchecked="CheckBoxCustomAddress_CheckState"/>
      </Grid>
    </GroupBox>
  </Grid>
</Window>
