<Window x:Class="PrescottOITShipping.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:PrescottOITShipping"
  mc:Ignorable="d"
  Title="Prescott OIT Shipping"
  Height="234"
  Width="550"
  ResizeMode="NoResize"
  WindowStartupLocation="CenterScreen">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid
      Grid.Column="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="28"/>
        <RowDefinition Height="28"/>
        <RowDefinition Height="28"/>
        <RowDefinition Height="28"/>
        <RowDefinition Height="28"/>
        <RowDefinition Height="28"/>
        <RowDefinition Height="28"/>
      </Grid.RowDefinitions>
      <ComboBox
        x:Name="ComboBoxAddressName"
        Grid.Column="0"
        Grid.Row="0"
        Grid.ColumnSpan="2"
        VerticalContentAlignment="Center"
        Margin="2"
        Width="Auto"
        Height="Auto"
        SelectionChanged="ComboBoxAddressName_SelectionChanged"/>
      <TextBox
        x:Name="TextBoxFullName"
        Grid.Column="0"
        Grid.Row="1"
        Grid.ColumnSpan="2"
        VerticalContentAlignment="Center"
        Margin="2"
        Width="Auto"
        Height="24"
        TextWrapping="Wrap"
        VerticalAlignment="Top"/>
      <TextBox
        x:Name="TextBoxUserEmail"
        Grid.Column="0"
        Grid.Row="2"
        Grid.ColumnSpan="2"
        VerticalContentAlignment="Center"
        Margin="2"
        Width="Auto"
        Height="24"
        TextWrapping="Wrap"
        VerticalAlignment="Top"/>
      <CheckBox
        x:Name="CheckBoxReturnLabel"
        Grid.Column="0"
        Grid.Row="3"
        Grid.ColumnSpan="2"
        Content="Request Return Label"
        VerticalContentAlignment="Center"
        Height="24"
        Width="Auto"
        VerticalAlignment="Top"
        Margin="2"/>
      <CheckBox
        x:Name="CheckBoxQuickPrint"
        Grid.Column="0"
        Grid.Row="4"
        Content="Quick Print"
        Height="24"
        Width="Auto"
        VerticalContentAlignment="Center"
        Margin="2"/>
      <CheckBox
        x:Name="CheckBoxPrintLandscape"
        Grid.Column="1"
        Grid.Row="4"
        Content="Landscape"
        Height="24"
        Width="Auto"
        VerticalContentAlignment="Center"
        Margin="2"/>
      <Button
        x:Name="ButtonPrint"
        Grid.Column="0"
        Grid.Row="5"
        Content="Print"
        VerticalContentAlignment="Center"
        Height="24"
        Width="Auto"
        Margin="2"
        Click="ButtonPrint_Click"/>
      <Button
        x:Name="ButtonExit"
        Grid.Column="1"
        Grid.Row="5"
        Content="Exit"
        VerticalContentAlignment="Center"
        Margin="2"
        Height="24"
        Width="Auto"
        Click="ButtonExit_Click"/>
      <Label
        x:Name="LabelPrinterName"
        FontWeight="Bold"
        Grid.Column="0"
        Grid.Row="6"
        Grid.ColumnSpan="2"
        Height="24"
        Width="Auto"
        VerticalContentAlignment="Center"
        HorizontalContentAlignment="Center"
        Margin="-3,-4,2,2"/>
    </Grid>
    <GroupBox
      Grid.Column="1"
      Header="Ship To Address"
      Margin="2">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="19"/>
        </Grid.RowDefinitions>
        <Grid
          Grid.Row="0">
          <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
          <TextBox
            Grid.Row="0"
            x:Name="TextBoxShipToPerson"
            VerticalContentAlignment="Center"
            Height="24"
            Margin="2"/>
          <TextBox
            Grid.Row="1"
            x:Name="TextBoxFullAddress"
            Width="Auto"
            Height="Auto"
            TextWrapping="Wrap"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Margin="2"/>
        </Grid>
        <CheckBox
          Grid.Row="1"
          x:Name="CheckBoxCustomAddress"
          Content="Custom Address"
          VerticalContentAlignment="Center"
          Height="16"
          VerticalAlignment="Bottom"
          Margin="1,2,2,2"
          Checked="CheckBoxCustomAddress_CheckState"
          Unchecked="CheckBoxCustomAddress_CheckState"/>
      </Grid>
    </GroupBox>
  </Grid>
</Window>
